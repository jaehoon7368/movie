{{>layout/header}}
<div id="reservation-box">
    <div id="reser-movie-box">
        <div class="reser-title">
            <p>영화</p>
        </div>
        {{#movies}}
        <div id="reser-movieList">
            <div class="reser-movieTitle">
                <img src="/images/{{limitAge}}.png" alt="">
                <p>{{title}}</p>
            </div>
        </div>
        {{/movies}}
    </div>
    <div id="reser-cinema-box">
        <div class="reser-title">
            <p>극장</p>
        </div>
        {{#cinemas}}
        <div id="reser-cinemaList">
            <div class="reser-movieTitle">
                <p>{{name}}</p>
            </div>
        </div>
        {{/cinemas}}
    </div>
    <div id="reser-date-box">
        <div class="reser-title">
            <p>날짜</p>
        </div>
    </div>
    <div id="reser-time-box">
        <div class="reser-title">
            <p>시간</p>
        </div>
    </div>
</div>
<div id="main-reser-box">
    <div id="main-reser">
        <div id="main-reser-movie">
            <p>영화선택</p>
        </div>
        <div id="main-reser-cinema">
            <p>극장선택</p>
        </div>
        <div id="main-reser-set">
            <p>> 좌석선택 > 결제</p>
        </div>
        <a href="">
            <div id="main-reser-set-btn">
                <p>좌석 선택</p>
            </div>
        </a>
    </div>
</div>
</div>


{{>layout/footer}}